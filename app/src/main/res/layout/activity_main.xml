<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.zeplin.MainActivity">
    <FrameLayout
        android:id="@+id/framelayout"
        style="@style/match_parent">

        <include layout="@layout/custom_header"></include>

    </FrameLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:context="com.android.app.zeplin.NavigationDrawer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#f3f3f3"
            android:id="@+id/kaam">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/image"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="#f3f3f3"
                android:id="@+id/linear">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/ndPersonName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sher Dil"
                        android:gravity="center"
                        android:layout_marginTop="60dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/ndCountryName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="INDIA"
                        android:gravity="center"
                        android:textSize="16sp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:src="@drawable/edit_icon"
                    android:paddingEnd="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:background="#fff"
                android:layout_marginTop="20dp"
                android:paddingEnd="5dp"
                android:paddingBottom="7dp"
                android:paddingTop="7dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="#111"
                    android:textSize="20sp"
                    android:drawableEnd="@drawable/home_icon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cards/Subscribing"
                    android:textColor="#111"
                    android:textSize="20sp"
                    android:drawableEnd="@drawable/card_icon"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:paddingStart="20dp"
                android:background="#fff"
                android:paddingEnd="5dp"
                android:paddingBottom="7dp"
                android:paddingTop="7dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Support"
                    android:textColor="#111"
                    android:textSize="20sp"
                    android:drawableEnd="@drawable/phone_icon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Requests"
                    android:textColor="#111"
                    android:textSize="20sp"
                    android:drawableEnd="@drawable/profile_icon_3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:paddingStart="20dp"
                android:background="#fff"
                android:paddingEnd="5dp"
                android:paddingBottom="7dp"
                android:paddingTop="7dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:textColor="#111"
                    android:textSize="20sp"
                    android:drawableEnd="@drawable/profile_icon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textColor="#111"
                    android:textSize="20sp"
                    android:drawableEnd="@drawable/profile_icon_2"/>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:paddingEnd="35dp"
            android:paddingStart="0dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/taj_mahal"
                app:civ_border_width="2dp"
                app:civ_border_color="#ff000000"
                />
        </FrameLayout>
    </RelativeLayout>



</android.support.v4.widget.DrawerLayout>
