<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvParis"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingStart="@dimen/zerodp"
    android:paddingEnd="@dimen/zerodp"
    card_view:cardCornerRadius="@dimen/fourdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/itemdiscover_imgTaj"
                android:layout_width="match_parent"
                android:layout_height="@dimen/twofiftydp"
                android:scaleType="centerCrop"
                android:src="@drawable/taj_mahal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/thirtydp"
                android:background="@color/translucentBlack"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center"
                    android:padding="@dimen/fivedp"
                    android:text="@string/ExploreIndia"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/seventeensp" />

                <TextView
                    android:id="@+id/itemdiscover_invisible4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/fivedp"
                    android:drawableStart="@drawable/location_icon"
                    android:padding="@dimen/fivedp"
                    android:paddingEnd="@dimen/fifteendp"
                    android:paddingStart="@dimen/zerodp"
                    android:text="@string/india"
                    android:textColor="@color/text_color"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/itemdiscover_visible2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/itemdiscover_invisible4"
                    android:layout_alignTop="@id/itemdiscover_invisible4"
                    android:layout_gravity="center"
                    android:padding="@dimen/fivedp"
                    android:src="@drawable/icon_edit"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/itemdiscover_visible3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/itemdiscover_invisible4"
                    android:layout_alignTop="@id/itemdiscover_invisible4"
                    android:layout_gravity="center"
                    android:padding="@dimen/fivedp"
                    android:src="@drawable/icon_trash"
                    android:visibility="invisible" />

            </RelativeLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/itemdiscover_imgTaj"
                android:layout_alignStart="@id/itemdiscover_imgTaj"
                android:paddingBottom="@dimen/tendp"
                android:paddingEnd="@dimen/zerodp"
                android:paddingStart="@dimen/twentytwodp">

                <Switch
                    android:id="@+id/itemdiscover_visible1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/itemdiscover_imgTaj"
                android:layout_alignEnd="@id/itemdiscover_imgTaj"
                android:padding="@dimen/twelvedp">

                <ImageView
                    android:id="@+id/itemdiscover_invisible3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/send_button"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/itemdiscover_invisible3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/send_request"
                    android:textColor="@color/text_color"
                    android:visibility="visible"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemdiscover_imgTaj"
                android:orientation="vertical"
                android:padding="@dimen/fivedp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/invisible1"
                        android:layout_width="@dimen/fiftytwodp"
                        android:layout_height="@dimen/fiftytwodp"
                        android:src="@drawable/add_image_icon" />

                    <LinearLayout
                        android:id="@+id/itemdiscover_invisible2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingEnd="@dimen/zerodp"
                        android:paddingStart="@dimen/zerodp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sher_dil"
                            android:textColor="@color/black" />

                        <RatingBar
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:numStars="5"
                            android:rating="4.5" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/time_1"
                        android:gravity="center"
                        android:paddingEnd="@dimen/zerodp"
                        android:paddingStart="@dimen/eightdp"
                        android:text="@string/timeLeft"
                        android:textColor="@color/black"
                        android:textSize="@dimen/twelvesp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/reviews"
                        android:gravity="center"
                        android:paddingEnd="@dimen/zerodp"
                        android:paddingStart="@dimen/fifteendp"
                        android:text="@string/reviews"
                        android:textColor="@color/black"
                        android:textSize="@dimen/twelvesp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/itemdiscover_tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>